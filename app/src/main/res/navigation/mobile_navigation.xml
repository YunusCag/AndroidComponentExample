<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    android:label="Home"
    app:startDestination="@id/destination_note_list">

    <fragment
        android:id="@+id/destination_note_list"
        android:name="com.yunuscagliyan.androidcomponentexample.NoteListFragment"
        android:label="fragment_note_list"
        tools:layout="@layout/fragment_note_list" >
        <action
            android:id="@+id/action_next"
            app:destination="@id/destination_add_update_note" >
            <argument
                android:name="noteId"
                app:argType="integer"
                android:defaultValue="0" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/destination_add_update_note"
        android:name="com.yunuscagliyan.androidcomponentexample.AUNoteFragment"
        android:label="Add Note"
        tools:layout="@layout/fragment_aunote" >

        <argument
            android:name="noteId"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>
</navigation>